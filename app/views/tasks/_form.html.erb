<%= form_for(task) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>

  <div class="form-group">
    <%= f.label :status %>
    <%= f.select :status, %w(未仕掛 仕掛中 完了), {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_field :content, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit '投稿', class: 'btn btn-primary' %>
  </div>
<% end %>
